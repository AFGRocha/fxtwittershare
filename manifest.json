{
    "name": "FXTwitter Share",
    "version": "1.0.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://*/twitter.com/*"
              ],
            "js": ["content.js"],
            "css": ["style.css"]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "fx-icon.png",
        "48": "fx-icon.png",
        "128": "fx-icon.png"
    },
    "permissions": [
        "https://twitter.com/*",
        "https://*.twitter.com/*",
        "tabs"
    ]
}